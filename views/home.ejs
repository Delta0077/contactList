<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title%></title>
    <script
      src="https://kit.fontawesome.com/97662113fb.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <div id="container">
      <h1 id="page-heading">
        <i class="fa-solid fa-address-book"></i>My Contacts List
      </h1>
    </div>

    <div>
      <ul id="container">
        <%for(let i of contactList){%>
        <li id="list-items">
          <p><%= i.name%></p>
          <p><%= i.phone%></p>
          <div id="btn-delete">
            <a href="/delete-contact/?phone=<%= i.phone%>">
              <i class="fas fa-window-close"></i>
            </a>
          </div>
        </li>
        <%}%>
      </ul>
    </div>

    <!-- New contact form -->
    <form action="/create-contact" method="post">
      <input type="text" name="name" placeholder="Enter Name" required />
      <input type="number" name="phone" placeholder="Enter Phone" required />
      <button type="submit">Add Contact</button>
    </form>
    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
